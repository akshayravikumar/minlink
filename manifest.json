{
  "manifest_version": 2,
  "name": "Minlink",
  "description": "Type 'go' to access to a shortened URL.",
  "version": "1.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "omnibox": {
    "keyword" : "go" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "64": "assets/image/icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "error.html"
  ],
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      }
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      }
    }
  }
}
